mixin rightside_menu
    .rightside-menu.rightside-menu--close
        +button({nameClass:"rightside-menu__close", images:true, src:"img/icons/svg/close.svg", alt:"#"})
        .rightside-menu__content
            a.rightside-menu__logo(href = "./index.html")
                img.rightside-menu__logo-img(src = "img/content/png/logo_big.png", alt="logo")
            h4.rightside-menu__title
                | Furniture for life
            p.rightside-menu__text
                | Sustainable hot chicken skateboard, dreamcatcher meggings actually squid. Slow-carb everyday carry +1 art party microdosing, put a bird on it brooklyn
            img.rightside-menu__images(src="img/content/jpg/rightside_menu_img.jpg", alt="images")